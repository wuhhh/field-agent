{
    "name": "Kitchen Sink Test Suite",
    "description": "Comprehensive test configuration with all supported field types",
    "version": "1.0.0",
    "fields": [
        {
            "name": "Text",
            "handle": "ksText",
            "field_type": "plain_text",
            "instructions": "Single line text field",
            "searchable": true
        },
        {
            "name": "Multiline Text",
            "handle": "ksMultilineText",
            "field_type": "plain_text",
            "instructions": "Multi-line text field",
            "multiline": true,
            "searchable": true
        },
        {
            "name": "Rich Text",
            "handle": "ksRichText",
            "field_type": "rich_text",
            "instructions": "Rich text editor with formatting",
            "searchable": true
        },
        {
            "name": "Email",
            "handle": "ksEmail",
            "field_type": "email",
            "instructions": "Email address field",
            "placeholder": "user@example.com",
            "searchable": true
        },
        {
            "name": "Image",
            "handle": "ksImage",
            "field_type": "image",
            "instructions": "Single image upload"
        },
        {
            "name": "Asset",
            "handle": "ksAsset",
            "field_type": "asset",
            "instructions": "Any type of asset upload"
        },
        {
            "name": "Number",
            "handle": "ksNumber",
            "field_type": "number",
            "instructions": "Numeric value",
            "decimals": 2
        },
        {
            "name": "Money",
            "handle": "ksMoney",
            "field_type": "money",
            "instructions": "Currency amount",
            "currency": "USD",
            "show_currency": true,
            "min": 0,
            "max": 10000
        },
        {
            "name": "Range",
            "handle": "ksRange",
            "field_type": "range",
            "instructions": "Slider range selector",
            "min": 0,
            "max": 100,
            "step": 5,
            "suffix": "%"
        },
        {
            "name": "URL",
            "handle": "ksUrl",
            "field_type": "url",
            "instructions": "Website URL"
        },
        {
            "name": "Dropdown",
            "handle": "ksDropdown",
            "field_type": "dropdown",
            "instructions": "Select one option from dropdown",
            "options": [
                {
                    "label": "Option One",
                    "value": "opt1",
                    "default": true
                },
                {
                    "label": "Option Two",
                    "value": "opt2"
                },
                {
                    "label": "Option Three",
                    "value": "opt3"
                }
            ]
        },
        {
            "name": "Radio Buttons",
            "handle": "ksRadio",
            "field_type": "radio_buttons",
            "instructions": "Select one option with radio buttons",
            "options": [
                "Small",
                "Medium",
                "Large"
            ]
        },
        {
            "name": "Checkboxes",
            "handle": "ksCheckboxes",
            "field_type": "checkboxes",
            "instructions": "Select multiple options",
            "options": [
                "Feature A",
                "Feature B",
                "Feature C",
                "Feature D"
            ]
        },
        {
            "name": "Multi Select",
            "handle": "ksMultiSelect",
            "field_type": "multi_select",
            "instructions": "Multi-select dropdown",
            "options": [
                "Tag 1",
                "Tag 2",
                "Tag 3",
                "Tag 4",
                "Tag 5"
            ]
        },
        {
            "name": "Country",
            "handle": "ksCountry",
            "field_type": "country",
            "instructions": "Select a country",
            "searchable": true
        },
        {
            "name": "Date",
            "handle": "ksDate",
            "field_type": "date",
            "instructions": "Date picker",
            "show_date": true,
            "show_time": false,
            "show_timezone": false
        },
        {
            "name": "Date Time",
            "handle": "ksDateTime",
            "field_type": "date",
            "instructions": "Date and time picker",
            "show_date": true,
            "show_time": true,
            "show_timezone": true
        },
        {
            "name": "Time",
            "handle": "ksTime",
            "field_type": "time",
            "instructions": "Time picker only"
        },
        {
            "name": "Color",
            "handle": "ksColor",
            "field_type": "color",
            "instructions": "Color picker with palette",
            "allow_custom_colors": true
        },
        {
            "name": "Lightswitch",
            "handle": "ksLightswitch",
            "field_type": "lightswitch",
            "instructions": "On/off toggle",
            "default": false,
            "on_label": "Enabled",
            "off_label": "Disabled"
        },
        {
            "name": "Button Group",
            "handle": "ksButtonGroup",
            "field_type": "button_group",
            "instructions": "Icon-based selection",
            "options": [
                {
                    "label": "Left",
                    "value": "left",
                    "icon": "align-left"
                },
                {
                    "label": "Center",
                    "value": "center",
                    "icon": "align-center",
                    "default": true
                },
                {
                    "label": "Right",
                    "value": "right",
                    "icon": "align-right"
                }
            ]
        },
        {
            "name": "Icon",
            "handle": "ksIcon",
            "field_type": "icon",
            "instructions": "Icon picker"
        },
        {
            "name": "Table",
            "handle": "ksTable",
            "field_type": "table",
            "instructions": "Structured data table",
            "columns": [
                {
                    "heading": "Name",
                    "handle": "name",
                    "type": "singleline",
                    "width": "30%"
                },
                {
                    "heading": "Email",
                    "handle": "email",
                    "type": "email",
                    "width": "30%"
                },
                {
                    "heading": "Active",
                    "handle": "active",
                    "type": "checkbox",
                    "width": "20%"
                },
                {
                    "heading": "Score",
                    "handle": "score",
                    "type": "number",
                    "width": "20%"
                }
            ],
            "add_row_label": "Add Person",
            "min_rows": 1,
            "max_rows": 10
        },
        {
            "name": "Categories",
            "handle": "ksCategories",
            "field_type": "categories",
            "instructions": "Select categories (configure sources after creation)",
            "allow_limit": true,
            "selection_label": "Choose categories"
        },
        {
            "name": "Entries",
            "handle": "ksEntries",
            "field_type": "entries",
            "instructions": "Select entries (configure sources after creation)",
            "allow_limit": true,
            "selection_label": "Choose entries"
        },
        {
            "name": "Tags",
            "handle": "ksTags",
            "field_type": "tags",
            "instructions": "Select tags (configure sources after creation)",
            "allow_limit": false,
            "selection_label": "Choose tags"
        },
        {
            "name": "Users",
            "handle": "ksUsers",
            "field_type": "users",
            "instructions": "Select users",
            "allow_limit": true,
            "selection_label": "Choose users"
        }
    ]
}